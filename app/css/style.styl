//.nav-icon
.input-row-half
	flex(between)
	margin-bottom: 20px
.input-row-half__el
	width:48%
	input
		width: 100%
.personal-text
	@extend .type--main
	text-align: center
	opacity 0.8
	color #6d6680
	margin-top: 30px
	line-height: 1.6
.modal-soc
	border-top:1px solid #cccccc
	margin-top: 55px
	padding-top: 30px
.modal-soc-text
	opacity 0.8
	color #6d6680
	@extend .type--main
	text-align: center
	margin-bottom: 20px
.modal-soc-row
	flex(mid)
.modal-soc-el
	round()
	flex(mid)
	cp()
	tr(all)
	size 68px
	margin: 0 6px
	&:hover
		transform scale(1.05)
	.icon
		size 30px
		fill white
.modal-soc-el--inst
	background-color #ac28a1
	background-image linear-gradient(-60deg, #fffc00 0%, #ff0000 50%, #0a00b2 100%)
.modal-soc-el--twitter
	background-color #31bdf8

.modal-soc-el--fb
	background-color #4c3eb1

.modal-soc-el--vk
	background-color #3a7dd0

.modal--auth
	transform: scaleY(0)
	transform-origin: top
	transition: transform 0.26s ease

.news-el-wave
	position: absolute
	width: 200%
	height: 20px
	left: 0px
	bottom: -2px
	background-image: url(../img/footer.svg)
	background-size:cover
	background-repeat: no-repeat
	font-size: 18px

.modal-head--tab
	flex(mid)
.modal-title__el
	@extend .type--md
	up()
	cp()
	tr(all)
	color #ac97d9
	margin: 0 30px
	z-index 2
	&:hover
		color: white
.modal-title__el--active
	color white
//.modal-info
.modal-tab
	height: 1px
	margin: -1px
	width: 1px
	padding: 0
	clip rect(0 0 0 0)
	opacity: 0
	overflow: hidden
.modal-tab--active
	height: auto
	clip initial
	margin:0
	opacity: 1
	width: auto
	transition opacity 1.4s
.input-row
	margin-bottom: 20px

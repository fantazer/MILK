	font-family Roboto
	font-size 18px
	border-radius 20px
	padding: 10px 25px
	tr(all)
	&:hover
		color white
		background-color rgba(255, 255, 255, 0.2)
.header__nav-el--active
	background-color rgba(255, 255, 255, 0.2)

.header-basket--empty
	round()
	flex(mid)
	cp()
	tr(all)
	padding: 0
	size 55px
	border 1px solid white
	background: none
	border-radius 27px
	&:hover
		background: white
		.icon
			fill $purple
	.icon
		tr(all)
		fill white
		size 20px
	.header-basket__price,
	.header-basket__val
		display: none
	.header-basket__icon
		margin: 0


.basket
